<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quizapp.Controllers.EnrollPage">
    <top>
        <VBox styleClass="top-section" style="-fx-background-color: white;">
            <HBox alignment="CENTER" spacing="20">
                <HBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                    <ImageView fx:id="logoImage" fitWidth="90" fitHeight="50" />
                    <Label styleClass="logo-text" text="QuizApp" />
                </HBox>
                <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
                    <Button text="Home" />
                    <Button fx:id="Courses" text="Enroll" />
                    <Button fx:id="leaderBoard" text="LeaderBoard" />
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
                    <ImageView fx:id="userImage" fitHeight="40" fitWidth="40" />
                    <Button text="User" />
                </HBox>
            </HBox>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <GridPane fx:id="courseGrid" styleClass="course-grid" />
        </ScrollPane>
    </center>
</BorderPane>
