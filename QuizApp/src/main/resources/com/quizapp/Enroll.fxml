<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quizapp.Controllers.EnrollPage">
    <top>
        <VBox styleClass="top-section" style="-fx-background-color: white;">
            <!-- Header Section -->
            <HBox alignment="CENTER" spacing="20">
                <!-- Left Section: Logo -->
                <HBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                    <ImageView fx:id="logoImage" fitHeight="40" fitWidth="40" styleClass="logo-text" />
                    <Label styleClass="logo-text" text="Quize" />
                </HBox>

                <!-- Center Section: Buttons -->
                <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
                    <Button fx:id="homeButton" text="Home" />
                    <Button text="Add New Courses" styleClass="active-button" />
                    <Button fx:id="leaderBoardButton" text="LeaderBoard" />
                </HBox>

                <!-- Right Section: User Info -->
                <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
                    <ImageView fx:id="userImage" fitHeight="40" fitWidth="40" styleClass="userImage" />
                    <Button text="User" />
                </HBox>
            </HBox>
        </VBox>
    </top>
    <!-- Separator -->
    <Separator prefHeight="5.0" />
    <center>
        <!-- Dynamic Courses Section -->
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <GridPane fx:id="courseGrid" styleClass="course-grid" />
        </ScrollPane>
    </center>
</BorderPane>
