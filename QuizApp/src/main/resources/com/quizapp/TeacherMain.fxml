<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quizapp.Controllers.TeacherMainPage">
    <top>
        <VBox>
            <!-- Header Section -->
            <HBox alignment="CENTER" spacing="20">
                <!-- Left Section: Logo -->
                <HBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                    <ImageView fx:id="logoImage" fitHeight="40" fitWidth="40" />
                    <Label styleClass="logo-text" text="Quize" />
                </HBox>

                <!-- Center Section: Buttons -->
                <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
                    <Button  text="Home" />
                    <Button fx:id="addCourses" text="Add Course" />
                </HBox>

                <!-- Right Section: User Info -->
                <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
                    <ImageView fx:id="userImage" fitHeight="40" fitWidth="40" />
                    <Button text="User" />
                </HBox>
            </HBox>

            <!-- Separator -->
            <Separator orientation="HORIZONTAL" />
        </VBox>
    </top>

    <center>
        <VBox fillWidth="true">
            <GridPane fx:id="numberGrid" alignment="CENTER"/>
        </VBox>

    </center>

</BorderPane>
