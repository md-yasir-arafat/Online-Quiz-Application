<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quizapp.Controllers.QuizListStudent">
    <top>
    <VBox styleClass="top-section" style="-fx-background-color: white;">
        <!-- Header Section -->
        <HBox alignment="CENTER" spacing="20">
            <!-- Left Section: Logo -->
            <HBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                <ImageView fx:id="logoImage" fitHeight="40" fitWidth="40" styleClass="logo-text" />
                <Label styleClass="logo-text" text="Quize" />
            </HBox>

            <!-- Center Section: Buttons -->
            <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
                <Button text="Home" />
                <Button fx:id="Courses" text="More Courses"/>
                <Button fx:id="leaderBoard" text="LeaderBoard" />
            </HBox>

            <!-- Right Section: User Info -->
            <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
                <ImageView fx:id="userImage" fitHeight="40" fitWidth="40" styleClass="userImage" />
                <Button text="User" />
            </HBox>
        </HBox>
    </VBox>
</top>

    <center>
        <VBox spacing="10" alignment="CENTER">
            <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                <GridPane fx:id="CourseGrid" alignment="CENTER" hgap="10" vgap="10" />
            </ScrollPane>
            <Button text="Start Quiz" fx:id="startQuiz" styleClass="button"/>
        </VBox>
    </center>


</BorderPane>
